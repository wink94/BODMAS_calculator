<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
    </style>


    <style name="FunctionalButtons" >
        <item name="android:textSize">25sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/colorFuncButtonTxt</item>
        <item name="android:background">@drawable/functional_round_rect_button</item>
    </style>


    <style name="NumberButtons" >
        <item name="android:textSize">25sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/colorNumButtonTxt</item>
        <item name="android:background">@drawable/number_round_rect_buttons</item>
    </style>


    <style name="EqualButtons" >
        <item name="android:textSize">25sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/colorNumButtonTxt</item>
        <item name="android:background">@drawable/equal_round_rect_button</item>
    </style>

</resources>
